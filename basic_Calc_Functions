#include <iostream>

using namespace std;

int basic_math (char op, int a, int b)

    {
    if(op == '+')
    {
        return a+b;
    }
    else
    if(op == '-')
    {
        return a-b;
    }
    else
    if(op=='*')
    {
        return a*b;
    }
    else
    if(op=='/')
    {
        return a/b;
    }
    
};

int main()

{
    int a;
    int b;
    int c;
    char op;
    
    cout << "input the first number"<< endl;
    cin >> a;
    
    cout << "enter your operator" <<endl;
    cin >> op;
    
    cout << "Now input a second number" << endl;
    cin >> b;

    c = basic_math (op, a, b);
    
    cout << "the answer is " << c << endl;
    
    return 0;

}
