int add (int a, int b);             /* prototyping function */ 

int sub (int a, int b);


int mul (int a, int b);


int dif (int a, int b);


int basic_math (char op, int a, int b);

    

int main()

{
    int a;
    int b;
    int c;
    char op;
    
    cout << "input the first number"<< endl;
    cin >> a;
    
    cout << "enter your operator" <<endl;
    cin >> op;
    
    cout << "Now input a second number" << endl;
    cin >> b;

    c = basic_math (op, a, b);
    
    cout << "the answer is " << c << endl;
    
    return 0;

}


int add (int a, int b)
{
        return a+b;
}

int sub (int a, int b)
{
        return a-b;
}

int mul (int a, int b)
{
        return a*b;
}

int dif (int a, int b)
{
        return a/b;
}

int basic_math (char op, int a, int b)

    {
    int result;
    
    
    if(op == '+')
    {
        result= add(a,b);
    }
    else
    if(op == '-')
    {
        result= sub(a,b);
    }
    else
    if(op=='*')
    {
        result= mul(a,b);
    }
    else
    if(op=='/')
    {
        result= dif(a,b);
    }
    return result;
    
};
